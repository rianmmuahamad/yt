{
  "version": 2,
  "builds": [
      {
          "src": "api/index.py",
          "use": "@vercel/python"
      },
      {
          "src": "*.html",
          "use": "@vercel/static"
      }
  ],
  "routes": [
      {
          "src": "/api/(.*)",
          "dest": "api/app.py"
      },
      {
          "src": "/downloads/(.*)",
          "dest": "api/app.py"
      },
      {
          "src": "/(.*)",
          "dest": "/$1"
      },
      {
          "src": "/",
          "dest": "/index.html"
      }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,PUT,POST,DELETE,OPTIONS" },
        { "key": "Access-Control-Allow-Headers", "value": "Content-Type,Authorization" }
      ]
    }
  ],
  "env": {
      "PYTHONUNBUFFERED": "1"
  }
}
